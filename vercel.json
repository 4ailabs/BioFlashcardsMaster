{
  "rewrites": [
    { 
      "source": "/api/asistente-ia", 
      "destination": "/api/asistente-ia" 
    },
    { 
      "source": "/(.*)", 
      "destination": "/" 
    }
  ],
  "outputDirectory": "dist/public",
  "buildCommand": "npm run build",
  "installCommand": "npm install",
  "framework": "vite",
  "regions": ["iad1"],
  "env": {
    "NODE_ENV": "production"
  }
}